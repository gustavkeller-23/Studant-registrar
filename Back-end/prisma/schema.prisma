generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Aluno {
  id              String   @id @default(uuid())
  nome            String
  dataNascimento  String
  cpf             String   @unique
  sexo            String
  curso           String
  turno           String
  foto            String?  @db.Text
  criadoEm        DateTime @default(now())
  atualizadoEm    DateTime @updatedAt
}

model Usuario {
  id        String   @id @default(uuid())
  nome      String
  senha     String
  criadoEm  DateTime @default(now())
}